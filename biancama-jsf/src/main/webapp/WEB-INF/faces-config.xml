<?xml version="1.0" encoding="utf-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemalocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0">

<lifecycle>
    <phase-listener>com.biancama.test.ejb.jsf2.listener.BiancamaListener</phase-listener>
</lifecycle>

	
	
	<converter>
		<converter-id>simpleConverter</converter-id>
		<converter-class>com.biancama.test.ejb.jsf2.converter.SimpleConverter</converter-class>
	</converter>
	<validator>
		<validator-id>simpleValidator</validator-id>
		<validator-class>com.biancama.test.ejb.jsf2.validator.SimpleValidator</validator-class>
	</validator>
  <!-- Hello World Tag -->
  <component>
    <component-type>com.biancama.test.ejb.jsf2.component.BiancamaHelloWorldComponent</component-type>
    <component-class>com.biancama.test.ejb.jsf2.component.BiancamaHelloWorldComponent</component-class>
  </component>
  <component>
    <component-type>com.biancama.test.ejb.jsf2.component.BiancamaEmailInput</component-type>
    <component-class>com.biancama.test.ejb.jsf2.component.BiancamaEmailInput</component-class>
  </component>
  
      <render-kit>
        <renderer>
            <component-family>BIANCAMA_EMAIL_FAMILY</component-family>
            <renderer-type>org.primefaces.component.inputtext.InputTextRenderer</renderer-type>
            <renderer-class>org.primefaces.component.inputtext.InputTextRenderer</renderer-class>
        </renderer>
    </render-kit>
  
</faces-config>

